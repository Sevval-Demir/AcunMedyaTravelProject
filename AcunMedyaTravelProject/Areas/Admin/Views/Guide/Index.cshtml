@model List<AcunMedyaTravelProject.Entities.Guide>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Rehberler";
}

<h2>Rehber Listesi</h2>

<a href="/Admin/Guide/CreateGuide" class="btn btn-success mb-3">Yeni Rehber</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Başlık</th>
            <th>Fotoğraf</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td><img src="@item.ImageUrl" width="100" /></td>
                <td>
                    <a href="/Admin/Guide/UpdateGuide/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/Guide/DeleteGuide/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
