@model List<AcunMedyaTravelProject.Entities.Country>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Ülkeler";
}

<h2>Ülkeler</h2>

<a href="/Admin/Country/CreateCountry" class="btn btn-success mb-3">Yeni Ülke Ekle</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="@item.ImageUrl" width="100" /></td>
                <td>
                    <a href="/Admin/Country/UpdateCountry/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/Country/DeleteCountry/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
