@model AcunMedyaTravelProject.Entities.Country
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Ülke Sil";
}

<h2>Silme Onayı</h2>

<div class="alert alert-warning">
    "<strong>@Model.Name</strong>" adlı ülkeyi silmek üzeresiniz. Emin misiniz?
</div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a href="/Admin/Country/Index" class="btn btn-secondary">İptal</a>
</form>
