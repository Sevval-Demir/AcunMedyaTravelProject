@model List<AcunMedyaTravelProject.Entities.Tour>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Turlar";
}

<h2>Turlar</h2>
<a href="/Admin/Tour/CreateTour" class="btn btn-success mb-3">Yeni Tur</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Resim</th>
            <th>İndirim</th>
            <th>Şehir Sayısı</th>
            <th>Mekan Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.TourCategory</td>
                <td><img src="@item.ImageUrl" width="100" /></td>
                <td>@item.Discount%</td>
                <td>@item.CityCount</td>
                <td>@item.TourPlaceCount</td>
                <td>
                    <a href="/Admin/Tour/UpdateTour/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/Tour/DeleteTour/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
