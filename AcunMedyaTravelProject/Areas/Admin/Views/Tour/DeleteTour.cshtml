@model AcunMedyaTravelProject.Entities.Tour
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Tur Sil";
}

<h2>Silme Onayı</h2>

<div class="alert alert-warning">
    "<strong>@Model.Title</strong>" turunu silmek üzeresiniz. Emin misiniz?
</div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a href="/Admin/Tour/Index" class="btn btn-secondary">İptal</a>
</form>
