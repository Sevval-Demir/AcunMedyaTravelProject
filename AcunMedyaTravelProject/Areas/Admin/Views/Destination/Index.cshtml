@model List<AcunMedyaTravelProject.Entities.Destination>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Şehirler";
}

<h2>Şehirler</h2>
<a href="/Admin/Destination/CreateDestination" class="btn btn-success mb-3">Yeni Şehir Ekle</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CityName</td>
                <td>@item.Country?.Name</td>
                <td><img src="@item.CoverImageUrl" width="100" /></td>
                <td>
                    <a href="/Admin/Destination/UpdateDestination/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/Destination/DeleteDestination/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
