@model List<AcunMedyaTravelProject.Entities.Booking>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Rezervasyon Listesi";
}

<h2>Rezervasyon Listesi</h2>

<a href="/Admin/Booking/CreateBooking" class="btn btn-success mb-3">Yeni Rezervasyon</a>
<table class="yable table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Tarih</th>
            <th>Paket</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Package?.Title</td>
                <td>
                    <a href="/Admin/Booking/UpdateBooking/@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="/Admin/Booking/UpdateBooking/@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>