<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Font Awesome -->
    <link href="~/lib/startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <!-- SB Admin CSS -->
    <link href="~/lib/startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.css" rel="stylesheet" />
</head>
<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/Admin/Dashboard/Index">
                <div class="sidebar-brand-icon"><i class="fas fa-globe"></i></div>
                <div class="sidebar-brand-text mx-3">ACUNMEDYA ADMIN</div>
            </a>

            <hr class="sidebar-divider my-0" />
            <li class="nav-item"><a class="nav-link" href="/Admin/Dashboard/Index"><i class="fas fa-fw fa-tachometer-alt"></i><span>Dashboard</span></a></li>
            <hr class="sidebar-divider" />
            <div class="sidebar-heading">Yönetim</div>

            <li class="nav-item"><a class="nav-link" href="/Admin/About/Index"><i class="fas fa-info-circle"></i><span>Hakkında</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/Country/Index"><i class="fas fa-flag"></i><span>Ülkeler</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/Destination/Index"><i class="fas fa-map-marker-alt"></i><span>Şehirler</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/Package/Index"><i class="fas fa-box"></i><span>Paketler</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/Guide/Index"><i class="fas fa-user-tie"></i><span>Rehberler</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/Testimonial/Index"><i class="fas fa-comment"></i><span>Yorumlar</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/Tour/Index"><i class="fas fa-route"></i><span>Turlar</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/Booking/Index"><i class="fas fa-calendar-check"></i><span>Rezervasyonlar</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/Service/Index"><i class="fas fa-cogs"></i><span>Servisler</span></a></li>
            <li class="nav-item"><a class="nav-link" href="/Admin/SocialMedia/Index"><i class="fas fa-share-alt"></i><span>Sosyal Medya</span></a></li>

            <hr class="sidebar-divider d-none d-md-block" />
        </ul>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <span class="font-weight-bold text-primary">Admin Panel</span>
                </nav>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>© AcunMedya Travel - @DateTime.Now.Year</span>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/startbootstrap-sb-admin-2-gh-pages/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/startbootstrap-sb-admin-2-gh-pages/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/startbootstrap-sb-admin-2-gh-pages/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/lib/startbootstrap-sb-admin-2-gh-pages/js/sb-admin-2.min.js"></script>
</body>
</html>
