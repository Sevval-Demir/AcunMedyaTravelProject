@model List<AcunMedyaTravelProject.Entities.Service>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Hizmetler";
}

<h2>Hizmetler</h2>
<a href="/Admin/Service/CreateService" class="btn btn-success mb-3">Yeni Hizmet</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İkon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><i class="@item.IconPath"></i></td>
                <td>
                    <a href="/Admin/Service/UpdateService/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/Service/DeleteService/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
