@model List<AcunMedyaTravelProject.Entities.About>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "About Listesi";
}

<h2>About Listesi</h2>
<a href="/Admin/About/CreateAbout" class="btn btn-success mb-3">Yeni Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="/Admin/About/DeleteAbout/@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
