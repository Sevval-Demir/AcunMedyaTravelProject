@model List<AcunMedyaTravelProject.Entities.Testimonial>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Yorumlar";
}

<h2>Yorumlar</h2>
<a href="/Admin/Testimonial/CreateTestimonial" class="btn btn-success mb-3">Yeni Yorum</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Ülke</th>
            <th>Puan</th>
            <th>Yorum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Nation</td>
                <td>@item.Rate ⭐</td>
                <td>@item.Content</td>
                <td>
                    <a href="/Admin/Testimonial/UpdateTestimonial/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
