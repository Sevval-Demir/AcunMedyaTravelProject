@model List<AcunMedyaTravelProject.Entities.SocialMedia>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Sosyal Medya";
}

<h2>Sosyal Medya Hesapları</h2>
<a href="/Admin/SocialMedia/CreateSocialMedia" class="btn btn-success mb-3">Yeni Hesap</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>İkon</th>
            <th>URL</th>
            <th>Rehber</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><i class="@item.Icon"></i></td>
                <td>@item.Url</td>
                <td>@item.Guide?.Name</td>
                <td>
                    <a href="/Admin/SocialMedia/UpdateSocialMedia/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/SocialMedia/DeleteSocialMedia/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
