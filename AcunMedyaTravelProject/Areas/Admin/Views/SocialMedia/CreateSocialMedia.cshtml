@model AcunMedyaTravelProject.Entities.SocialMedia
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var guides = ViewBag.Guides as List<AcunMedyaTravelProject.Entities.Guide>;
    ViewBag.Title = "Yeni Sosyal Hesap";
}

<h2>Yeni Sosyal Medya Hesabı</h2>

<form method="post">
    <div class="form-group">
        <label>İkon</label>
        <input asp-for="Icon" class="form-control" />
    </div>
    <div class="form-group">
        <label>URL</label>
        <input asp-for="Url" class="form-control" />
    </div>
    <div class="form-group">
        <label>Rehber</label>
        <select asp-for="GuideId" class="form-control">
            <option value="">Rehber Seçin</option>
            @foreach (var item in guides)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
