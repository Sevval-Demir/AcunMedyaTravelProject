@model List<AcunMedyaTravelProject.Entities.Package>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Tatil Paketleri";
}

<h2>Tatil Paketleri</h2>
<a href="/Admin/Package/CreatePackage" class="btn btn-success mb-3">Yeni Paket</a>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Başlık</th>
            <th>Şehir</th>
            <th>Görsel</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Destination?.CityName</td>
                <td><img src="@item.ImageUrl" width="100" /></td>
                <td>@item.Price ₺</td>
                <td>
                    <a href="/Admin/Package/UpdatePackage/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/Package/DeletePackage/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
